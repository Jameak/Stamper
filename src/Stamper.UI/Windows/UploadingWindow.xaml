<Window x:Class="Stamper.UI.Windows.UploadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Uploading..." Height="100" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center" Margin="30,0,30,0">
            <TextBlock x:Name="Text" Text="  Uploading image. Please wait.  " HorizontalAlignment="Center" Margin="0,0,0,2"/>
            <ProgressBar IsIndeterminate="True" Minimum="0" Maximum="100" Height="10" Width="{Binding ElementName=Text, Path=ActualWidth}"/>
        </StackPanel>
    </Grid>
</Window>
